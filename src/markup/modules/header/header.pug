mixin header()
	.inner-header
		header.header.container.flex
				+logo('default')
				nav.header__navigation.navigation-header
					ul.navigation-header__list
						li.navigation-header__item
							a.navigation-header__link(href='colors-type.html') О нас
						li.navigation-header__item
							a.navigation-header__link.link-menu-header(href='#') Услуги
						li.navigation-header__item
							a.navigation-header__link(href='header-footer.html') Вакансии
						li.navigation-header__item
							a.navigation-header__link(href='cards.html') Новости
						li.navigation-header__item
							a.navigation-header__link.link-menu-header(href='form-elements.html') Соглашения
						li.navigation-header__item
							+button-white('войти')
						li.navigation-header__item
							+button-filled-color('зарегистрироваться')