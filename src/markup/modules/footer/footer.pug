mixin footer()
	.footer-wrapper
		footer.footer.container.flex
			ul.footer__list
				li.footer__item.footer-logo
					+logo('default')
					p.footer__text Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные&nbsp;взгляды»
				li.footer__item.footer-navigation
					ul.footer-navigation__list
						li.footer-navigation__item
							h3.footer-navigation__title навигация
							ul.footer-navigation__links.footer-links
								li.footer-links__item
									a(href="") О нас
								li.footer-links__item
									a(href="") Новости
								li.footer-links__item
									a(href="") Служба поддержки
								li.footer-links__item
									a(href="") Услуги
						li.footer-navigation__item
							h3.footer-navigation__title о нас
							ul.footer-navigation__links.footer-links
								li.footer-links__item
									a(href="") О сервисе
								li.footer-links__item
									a(href="") Наша команда
								li.footer-links__item
									a(href="") Вакансии
								li.footer-links__item
									a(href="") Инвесторы
						li.footer-navigation__item
							h3.footer-navigation__title Служба поддержки
							ul.footer-navigation__links.footer-links
								li.footer-links__item
									a(href="") Соглашения
								li.footer-links__item
									a(href="") Сообщества
								li.footer-links__item
									a(href="") Связь с нами
				li.footer__item.footer-subscribe
					h3.footer-subscribe__title Подписка
					p.footer-subscribe__text Получайте специальные предложения и новости сервиса
					form.footer-subscribe__form(action="#")
						+text-field-subscribe('Email')