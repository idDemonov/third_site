doctype html
html(lang='ru')
	//- Mixins
	include ../elements/element-import
	include ../components/component-import
	include ../modules/module-import
	+head()
	body.wrapper
		.inner
			+header()
			main.main.container.flex
				aside.aside
					ul.aside__list
						li.aside__item
							+title-component('даты пребывания в отеле')
							+date-filter()
						li.aside__item
							+title-component('гости')
							+dropdownChoose('guests', ['3 гостя, 1 младенец ', 3, 0, 1], false)
						li.aside__item
							+slider('диапазон цены')
