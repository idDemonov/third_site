							+title-component('Checkbox Buttons')
							+checkbox-list()
						li.aside__item
							+title-component('Checkbox Buttons')
							+checkbox-list('rich')
						li.aside__item
							+title-component('Удобства номера')
							+dropdownChoose('rooms', ['2 спальни, 2 кровати, без ванных комнат', 2, 2, 0], false)
						li.aside__item
							+checkbox-drop-list(false, 'дополнительные удобства')
