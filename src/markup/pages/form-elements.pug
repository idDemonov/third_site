doctype html
html(lang='ru')
	head
		title Header and Footer
		meta(http-equiv='Content-type', content='text/html;charset=UTF-8')
		meta(name='format-detection', content='telephone=no')
		meta(name='viewport' content='width=device-width, initial-scale=1')
	body.wrapper-UI.wrapper-UI--background--write
		.header-UI
			.header-UI__logo
				img(src=require('../../assets/img/logo/logo__grey.svg').default, alt="")
		form
			.grid
				.row
					.column
						//- Mixins
						include ../elements/component
						include ../elements/other/details.pug

						include ../elements/text-field/basic
						include ../elements/text-field/email

						include ../elements/buttons/button/button--elongated
						include ../elements/buttons/button/button--filled-color
						include ../elements/buttons/button/button--white
						include ../elements/buttons/button/button--text
						include ../elements/buttons/checkbox/checkbox-drop-list

						include ../components/dropdown/dropdown-choose
						include ../components/pagination
						include ../components/dropdown/date/filter-date-dropdown
						include ../components/dropdown/date/date-dropdown
						include ../components/dropdown/date/date-dropdown--selected
						include ../components/slider
						include ../components/comment
						ul.elements
							li.elements__item
								+component('Text Field', 'Default')
								+text-field-basic('Email', 'Email')

							li.elements__item
								+component('Text Field', 'Hover / Focus')
								+text-field-basic('text', 'Просто текст', 'This is pretty awesome', 'text-field__input--active')
							li.elements__item
								+component('Dropdown', 'Default')
								+dropdownChoose('guests', ['Сколько гостей', 0, 0, 0], false)
							li.elements__item
								+component('masked text field', 'Default')
								+text-field-basic('text', 'ДД.ММ.ГГГГ', '', '', '', regDate, 'Пожалуйста, используйте формат ДД.ММ.ГГГГ')
							li.elements__item.elements__item--row
								+calendar()
							li.elements__item
								+component('filter date dropdown')
								+date-filter()
							li.elements__item
								+component('subscription text field')
								+text-field-subscribe()
					.column.column--middle
						ul.elements
							li.elements__item.elements__item--middle
								include ../components/checkbox/checkbox-list
							li.elements__item.elements__item--middle
								include ../components/radio-group
							li.elements__item.elements__item--middle
								include ../components/toggle-group
							li.elements__item.elements__item--middle
								include ../components/like-group
							li.elements__item.elements__item--middle
								include ../components/rating-group
					.column
						ul.elements
							li.elements__item.elements__item--middle
								+slider
							li.elements__item
								include ../components/buttons
							li.elements__item
								+component('pagination')
								+pagination
							li.elements__item
				.row
					.column
						ul.elements
							li.elements__item
								+component('dropdown', 'Default', 'max-width: 266px')
								+dropdownChoose('rooms', ['2 спальни, 2 кровати, без ванных комнат', 2, 2, 0], false)
							li.elements__item
								+component('dropdown', 'Default', 'max-width: 266px')
								+dropdownChoose('rooms', ['2 спальни, 2 кровати, без ванных комнат', 2, 2, 0], true)
							li.elements__item
								+checkbox-list(false)
							li.elements__item
								+checkbox-list(true)
							li.elements__item
								+details('Комфорт', 'Шумопоглощающие стены', 'comfort.svg')
							li.elements__item
								+details('Удобство', 'Окно в каждой из спален', 'convenience.svg')
							li.elements__item


					.column.column--double
						.row.row--double
							.column
								ul.elements
									li.elements__item
										+component('Dropdown')
										+dropdownChoose('guests', ['Сколько гостей', 0, 0, 0], true)
									li.elements__item.elements__item--paddTop
										include ../components/checkbox/checkbox-list--rich
							.column
								ul.elements
									li.elements__item
										+component('Dropdown')
										+dropdownChoose('guests', ['3 Гостя', 2, 1, 0], true)
									li.elements__item.elements__item--paddTop
										include ../components/bullet-list
						.row.row--bottom
							.elements__item
								+comment
