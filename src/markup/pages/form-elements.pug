doctype html
html(lang='ru')
	head
		title Header and Footer
		meta(http-equiv='Content-type', content='text/html;charset=UTF-8')
		meta(name='format-detection', content='telephone=no')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
	body.wrapper-UI.wrapper-UI--background--write
		.header-UI
			.header-UI__logo
				img(src="assets/img/logo/logo__grey.svg", alt="")
		.grid
			.row
				.column
					ul.elements
						li.elements__item
							include ../elements/text-field/text-field
						li.elements__item
							include ../elements/text-field/text-field--hover-focus
						li.elements__item
							include ../elements/dropdown/guests/guests-dropdown
						li.elements__item
							include ../elements/text-field/text-field--masked
						li.elements__item.elements__item--row
							include ../elements/dropdown/date/date-dropdown
							include ../elements/dropdown/date/date-dropdown--selected
						li.elements__item
							include ../elements/dropdown/date/filter-date-dropdown
						li.elements__item
							include ../elements/text-field/text-field--subscription
				.column.column--middle
					ul.elements
						li.elements__item.elements__item--middle
							include ../elements/buttons/checkbox/checkbox-list
						li.elements__item.elements__item--middle
							include ../elements/buttons/radio/gender
						li.elements__item.elements__item--middle
							include ../elements/buttons/toggle/toggle-group
						li.elements__item.elements__item--middle
							include ../elements/buttons/like/like-group
						li.elements__item.elements__item--middle
							include ../elements/buttons/rate/star-group
				.column
					ul.elements
						li.elements__item
							include ../elements/text-field/text-field
						li.elements__item
							include ../elements/text-field/text-field--hover-focus
						li.elements__item
							include ../elements/dropdown/guests/guests-dropdown
						li.elements__item
							include ../elements/text-field/text-field--masked
						li.elements__item.elements__item--row
							include ../elements/dropdown/date/date-dropdown
							include ../elements/dropdown/date/date-dropdown--selected
						li.elements__item
							include ../elements/dropdown/date/filter-date-dropdown
						li.elements__item
							include ../elements/text-field/text-field--subscription
			.row
				.column
					ul.elements
						li.elements__item
							include ../elements/dropdown/rooms/rooms-dropdown
						li.elements__item
							include ../elements/dropdown/rooms/rooms-dropdown--expanded
						li.elements__item
							include ../elements/dropdown/checkbox-list/checkbox-list
						li.elements__item
							include ../elements/dropdown/checkbox-list/checkbox-list--expanded
						li.elements__item
							include ../elements/other/comfort
						li.elements__item
							include ../elements/other/convenience
						li.elements__item
							div#slider
							
							
				.column.column--double
					.row
						.column
							ul.elements
								li.elements__item
									include ../elements/dropdown/guests/guests-dropdown--expanded
								li.elements__item.elements__item--paddTop
									include ../elements/buttons/checkbox/checkbox-list-rich
						.column
							ul.elements
								li.elements__item
									include ../elements/dropdown/guests/guests-dropdown--selected
								li.elements__item.elements__item--paddTop
									include ../elements/other/bullet-list
					.row
