mixin reservation()
	.reservation-card
		.reservation-card__room
			+room-title('888', true, '9 990')
		form#reservation.reservation-card__form.reservation-data(name="reservation" action='#')
			ul.reservation-data__list
				li.reservation-data__item
					+calendar('Прибытие', 'Выезд', '19.08.2019', '23.08.2019')
				li.reservation-data__item
					+title-component('Гости')
					+dropdownChoose('guests', ['3 гостя', 2, 1, 0], false)
		.reservation-data-price
			dl(data-price='day').reservation-data-price__item
				dt.reservation-data-price__description 9 990₽ х 4 суток
				dd.reservation-data-price__sum 39 960₽
			dl(data-price='service').reservation-data-price__item
				dt.reservation-data-price__description Сбор за услуги: скидка 2 179₽
				span.price-description
				dd.reservation-data-price__sum 0₽
			dl(data-price='additional-service').reservation-data-price__item
				dt.reservation-data-price__description Сбор за&nbsp;дополнительные услуги
				span.price-description
				dd.reservation-data-price__sum 300₽
		.reservation-card__footer
			dl.reservation-card__sum.sum-total-reservation
				dt.sum-total-reservation__title Итого
				dd.sum-total-reservation__sum 38 081₽
			+button-elongated('Забронировать', 'submit', '', 'reservation')